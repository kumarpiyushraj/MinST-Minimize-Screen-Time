<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deep_space_gradient">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivAppLogo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/logo_transparent"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MinST"
                android:fontFamily="@font/pontano_sans_medium"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Minimize Screen Time"
            android:textColor="#E0FFFFFF"
            android:fontFamily="@font/pontano_sans_medium"
            android:textSize="18sp"
            android:textStyle="italic"
            android:letterSpacing="0.03"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flActivationRing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.65">
        <ImageView
            android:id="@+id/ivRotatingRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/activation_ring_off"/>
        <ImageView
            android:id="@+id/ivIconCenter"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_power"
            app:tint="#80FFFFFF" />
        <ImageButton
            android:id="@+id/btnToggleService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Service" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder is Off"
        android:textColor="#CCFFFFFF"
        android:fontFamily="@font/carlito_bold"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/flActivationRing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUsage"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usage"
            android:fontFamily="@font/pontano_sans_medium"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_usage_stats"
            app:iconGravity="top"
            app:iconTint="@android:color/white" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:fontFamily="@font/pontano_sans_medium"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_settings"
            app:iconGravity="top"
            app:iconTint="@android:color/white" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInfo"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Info"
            android:fontFamily="@font/pontano_sans_medium"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_info"
            app:iconGravity="top"
            app:iconTint="@android:color/white" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/mainUiGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="llHeader,flActivationRing,tvStatus,bottomNavLayout" />


    <LinearLayout
        android:id="@+id/permissionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_shield_lock"
            app:tint="#FFEB3B"
            android:contentDescription="Lock Icon"
            android:layout_marginTop="16dp" /> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/pontano_sans_medium"
        android:gravity="center"
        android:text="Permissions Required"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/pontano_sans_medium"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Please grant the following permissions for the app to function correctly."
            android:textColor="#E0FFFFFF"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/rowUsageStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/ivUsageStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pending_circle"
                app:tint="#80FFFFFF" />
            <TextView
                android:id="@+id/tvUsageTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Usage Stats Access"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvUsageStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Required"
                android:textColor="#80FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/ivOverlayStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pending_circle"
                app:tint="#80FFFFFF" />
            <TextView
                android:id="@+id/tvOverlayTitle"
                android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/pontano_sans_medium"
            android:text="Display Over Other Apps"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
            <TextView
                android:id="@+id/tvOverlayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Required"
                android:textColor="#80FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowActivityStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/ivActivityStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pending_circle"
                app:tint="#80FFFFFF" />
            <TextView
                android:id="@+id/tvActiveTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Activity Access"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvActivityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Required"
                android:textColor="#80FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/ivNotificationsStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pending_circle"
                app:tint="#80FFFFFF" />
            <TextView
                android:id="@+id/tvNotificationsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Notifications"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvNotificationsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pontano_sans_medium"
                android:text="Required"
                android:textColor="#80FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGrantPermissions"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Grant Next Permission"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/pontano_sans_medium"
            app:cornerRadius="28dp"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/button_background_dark_blue" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>